<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
            name="events"
            type="com.funcheap.funmapsf.commons.models.Events"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".features.detail.DetailActivity">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <ImageView
                    android:id="@+id/ivBackdrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/extra_extra_light_gray"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    android:src="@drawable/blue_angels"
                    />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:behavior_overlapTop="55dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:elevation="@dimen/cardview_elevation"
                    card_view:cardCornerRadius="@dimen/cardview_corner_radius"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tvEventName"
                            style="@style/BoldPrimaryText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="@{events.title}"
                            android:textSize="@dimen/largeText"
                            android:paddingLeft="@dimen/padding_small"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvEventAddress"
                            style="@style/SecondaryText"
                            android:layout_below="@+id/tvEventName"
                            android:text="@{events.venue.venueAddress}"
                            android:paddingTop="@dimen/padding_top"
                            android:paddingLeft="@dimen/padding_small"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/tvEventDate"
                            style="@style/SecondaryText"
                            android:layout_below="@+id/tvEventAddress"
                            android:text="@{events.startDate}"
                            android:paddingTop="@dimen/padding_top"
                            android:paddingLeft="@dimen/padding_small"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvEventType"
                            style="@style/SecondaryText"
                            android:layout_below="@+id/tvEventDate"
                            android:text="@{events.cost}"
                            android:paddingTop="@dimen/padding_top"
                            android:paddingLeft="@dimen/padding_small"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/tvEventType"
                            android:id="@+id/llEventCategories"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/padding_small"
                            android:paddingBottom="@dimen/padding_small">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/pill_filled"
                                android:textAllCaps="true"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/small_text"
                                android:id="@+id/tvEventPopularity"
                                android:textStyle="bold"
                                android:text="@{events.cost}"
                                android:layout_weight="1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/pill_filled"
                                android:textAllCaps="true"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/small_text"
                                android:id="@+id/tvEventCost"
                                android:text="@{events.cost}"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                />

                            <View
                                android:layout_width="@dimen/padding_large"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/padding_small"
                                android:layout_weight="3"/>
                        </LinearLayout>


                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="3dp"
                            android:layout_below="@+id/llEventCategories"
                            android:id="@+id/lineDivider"
                            android:background="@android:color/darker_gray"
                            android:paddingLeft="@dimen/padding_small"
                            android:paddingRight="@dimen/padding_small"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_below="@+id/lineDivider"
                            android:paddingTop="@dimen/padding_medium"
                            android:paddingBottom="@dimen/padding_medium">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/ivCalender"
                                android:src="@drawable/ic_event_black"
                                android:background="@color/cardview_light_background"
                                android:layout_weight="1"
                                android:onClick="onCalenderClick"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/ivDirection"
                                android:src="@drawable/ic_directions_black"
                                android:layout_weight="1"
                                android:onClick="onDirectionsClick"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/ivShare"
                                android:src="@drawable/ic_share_black"
                                android:layout_weight="1"
                                android:onClick="onShareClick"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/ivBookmark"
                                android:src="@drawable/ic_bookmark_border_black"
                                android:layout_weight="1"
                                android:onClick="onSaveClick"/>
                        </LinearLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/tvEventDetail"
                    android:text="@{events.content}"
                    android:paddingTop="@dimen/padding_top"
                    android:paddingLeft="@dimen/padding_left"/>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>

</layout>
