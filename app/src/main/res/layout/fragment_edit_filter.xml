<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/filter_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:elevation="@dimen/z_bottom_sheet"
    app:behavior_hideable="true"
    app:behavior_peekHeight="@dimen/height_toolbar"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <HorizontalScrollView
        android:id="@+id/filter_chips_scrollview"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:clickable="false"
        android:scrollbarSize="@dimen/margin_tiny"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/filter_chips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/margin_medium"
            android:paddingStart="@dimen/margin_medium" />
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/done"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filter_chips_scrollview">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Dummy item to prevent AutoCompleteTextView from receiving focus -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:focusableInTouchMode="true" />

            <EditText
                android:id="@+id/search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_item_background"
                android:gravity="center_vertical"
                android:hint="@string/search"
                android:padding="@dimen/image_size"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_when"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_left"
                android:text="@string/when"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search" />

            <Spinner
                android:id="@+id/when_spin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_when"
                android:padding="@dimen/padding_left"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_when" />

            <TextView
                android:id="@+id/tv_where"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/when_spin"
                android:text="@string/where"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/when_spin" />

            <AutoCompleteTextView
                android:id="@+id/edit_where"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_where"
                android:hint="@string/address"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_where" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_where"
                android:text="@string/price"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_where" />


            <org.honorato.multistatetogglebutton.MultiStateToggleButton
                android:id="@+id/price_mstb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_price"
                app:mstbColorNotPressedBackground="@color/mdtp_white"
                app:mstbColorPressedBackground="@color/light_blue"
                app:mstbPrimaryColor="@color/light_blue"
                app:mstbSecondaryColor="@color/mdtp_white"
                app:values="@array/price_options_array" />

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_left"
                android:text="@string/categories"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/price_mstb"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <Spinner
                android:id="@+id/category_spin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_category"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_category"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp" />

            <com.vpaliy.chips_lover.ChipsLayout
                android:id="@+id/category_chips"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/category_spin"
                app:chipCloseable="true"
                app:chipEndIconColor="@color/light_gray"
                app:chip_layout_horizontal_margin="@dimen/margin_small"
                app:chip_layout_vertical_margin="@dimen/margin_small"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/category_spin"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/done"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/light_blue"
        android:text="@string/done"
        android:textColor="@color/mdtp_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>